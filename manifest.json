{
    "name": "Disable Polymer on YouTube",
    "version": "1.0.0.0",
    "author": "AK",

    "icons": {
        "24": "icon_24.png",
        "48": "icon_48.png"
    },

    "permissions": [
        "*://www.youtube.com/*",
        "webRequest",
        "webRequestBlocking"
    ],

    "browser_action": {
        "default_icon": {
            "20": "icon_20.png",
            "40": "icon_40.png"
        },
        "default_title": "Disable Polymer"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}